        android:theme="@style/Theme.Fab_LetsRide_bar"
        android:usesCleartextTraffic="false">
        <activity
            android:name=".presentation.activities.SplashActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activities.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activities.LanguageActivity"
            android:exported="false"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".presentation.activities.WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".presentation.activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Design.Light.NoActionBar" />

        <activity
            android:name=".presentation.activities.RegistrationActivity"
            android:exported="true"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>




