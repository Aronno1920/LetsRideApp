<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".presentation.fragments.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_edittext">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_bd_flug"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:textSize="16dp"
            android:text="@string/level_mobile_prefix"/>

        <EditText
            android:id="@+id/EditText_MobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_edittext_noborder"
            android:textSize="16dp"
            android:hint="@string/level_mobile_number"
            android:lines="1"
            android:maxLength="11"
            android:inputType="number"/>
    </LinearLayout>

    <Button
        android:id="@+id/Button_Login"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/style_buttom"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@color/colorWhite" />
</LinearLayout>