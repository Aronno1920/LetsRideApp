<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".fragments.VerificationFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/level_verify_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_edittext">
        <TextView
            android:id="@+id/TextView_Prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/EditText_Verification_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_edittext_noborder"
            android:textSize="16dp"
            android:hint="Varification Code"
            android:lines="1"
            android:maxLength="6"
            android:inputType="number"/>
    </LinearLayout>

    <Button
        android:id="@+id/Button_Verify"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/style_buttom"
        android:layout_marginTop="10dp"
        android:text="@string/level_verify_button"
        android:textColor="@color/colorTextWhite" />

</LinearLayout>