<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:elevation="3dp"
    card_view:cardCornerRadius="@dimen/card_ride_upcoming_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView_PickupLocation"
                android:textColor="@color/colorDarkGrey"
                android:text="Mirpur 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

            <TextView
                android:text=" >>> "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/TextView_DropOffLocation"
                android:textColor="@color/colorDarkGrey"
                android:text="Police Plaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TextView_PickupZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via ECB" />
            <TextView
                android:text=" - To - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/TextView_DropOffZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via ECB" />

            <TextView
                android:id="@+id/TextView_ZoneCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via ECB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TextView_Via_Zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via ECB" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TextView_Zone_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mirpur 2, Mirpur 10, Mirpur 11, Mirpur 12, Kalshi, ECB, Banani, Gulshan 2, Gulshan 1"
            android:textSize="12dp"/>
    </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>