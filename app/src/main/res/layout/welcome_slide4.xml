<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_welcome">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="80dp"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/img_welcome_size"
            android:layout_height="@dimen/img_welcome_size"
            android:src="@drawable/ic_welcome_safety" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_4_title"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/slide_4_desc"
            android:textSize="@dimen/slide_desc" />

    </LinearLayout>

</RelativeLayout>